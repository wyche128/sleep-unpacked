    <!-- Scripts -->
    <script>
        document.addEventListener('DOMContentLoaded', () => {

            // --- 1. Hormone Chart Logic ---
            const ctx = document.getElementById('hormoneChart').getContext('2d');
            const hormoneChart = new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: ['Cortisol (Stress)', 'Oxytocin (Love)'],
                    datasets: [{
                        label: 'Pre-Snuggle Levels',
                        data: [80, 20],
                        backgroundColor: [
                            'rgba(239, 68, 68, 0.6)', // Red for Cortisol
                            'rgba(99, 102, 241, 0.6)' // Indigo for Oxytocin
                        ],
                        borderColor: [
                            'rgba(239, 68, 68, 1)',
                            'rgba(99, 102, 241, 1)'
                        ],
                        borderWidth: 1,
                        borderRadius: 5
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: {
                        y: {
                            beginAtZero: true,
                            max: 100,
                            title: {
                                display: true,
                                text: 'Hormone Level (%)'
                            }
                        }
                    },
                    plugins: {
                        legend: {
                            display: false
                        },
                        tooltip: {
                            callbacks: {
                                label: function (context) {
                                    return context.raw + '%';
                                }
                            }
                        }
                    }
                }
            });

            // Snuggle Simulation
            const snuggleBtn = document.getElementById('snuggleBtn');
            let isSnuggled = false;

            snuggleBtn.addEventListener('click', () => {
                isSnuggled = !isSnuggled;

                if (isSnuggled) {
                    hormoneChart.data.datasets[0].data = [30, 90]; // Low stress, high love
                    hormoneChart.data.datasets[0].backgroundColor = [
                        'rgba(239, 68, 68, 0.3)',
                        'rgba(99, 102, 241, 0.9)'
                    ];
                    snuggleBtn.innerHTML = '<i class="fas fa-undo mr-2"></i> Reset Levels';
                    snuggleBtn.classList.remove('bg-indigo-600', 'hover:bg-indigo-700');
                    snuggleBtn.classList.add('bg-slate-500', 'hover:bg-slate-600');
                } else {
                    hormoneChart.data.datasets[0].data = [80, 20]; // Reset
                    hormoneChart.data.datasets[0].backgroundColor = [
                        'rgba(239, 68, 68, 0.6)',
                        'rgba(99, 102, 241, 0.6)'
                    ];
                    snuggleBtn.innerHTML = '<i class="fas fa-dog mr-2"></i> Simulate Snuggle';
                    snuggleBtn.classList.add('bg-indigo-600', 'hover:bg-indigo-700');
                    snuggleBtn.classList.remove('bg-slate-500', 'hover:bg-slate-600');
                }
                hormoneChart.update();
            });


            // --- 2. Watchdog Effect Logic ---
            const sleepGraph = document.getElementById('sleepGraph');
            const petToggle = document.getElementById('petToggle');
            const sleepStateLabel = document.getElementById('sleepStateLabel');
            const sleepDescLabel = document.getElementById('sleepDescLabel');

            // Generate initial bars
            function generateBars(vigilance) {
                sleepGraph.innerHTML = '';
                const barCount = 20;
                for (let i = 0; i < barCount; i++) {
                    const bar = document.createElement('div');
                    bar.classList.add('w-2', 'rounded-t-sm', 'vigilance-bar');
                    // Random height based on vigilance (High vigilance = erratic high bars)
                    let h;
                    if (vigilance === 'high') {
                        h = Math.floor(Math.random() * 60) + 20; // 20-80%
                        bar.classList.add('bg-red-400');
                    } else {
                        // Deep sleep = steady low bars (deep waves)
                        h = Math.floor(Math.random() * 20) + 10; // 10-30%
                        // Make a few look like deep restorative waves
                        if (i > 5 && i < 15) h = 5;
                        bar.classList.add('bg-blue-400');
                    }
                    bar.style.height = `${h}%`;
                    sleepGraph.appendChild(bar);
                }
            }

            generateBars('high');

            petToggle.addEventListener('change', (e) => {
                if (e.target.checked) {
                    generateBars('low');
                    sleepStateLabel.textContent = "State: Restorative Deep Sleep";
                    sleepStateLabel.classList.remove('text-blue-200');
                    sleepStateLabel.classList.add('text-emerald-300');
                    sleepDescLabel.textContent = "Outsourcing vigilance to your pet allow you to power down.";
                } else {
                    generateBars('high');
                    sleepStateLabel.textContent = "State: High Vigilance";
                    sleepStateLabel.classList.add('text-blue-200');
                    sleepStateLabel.classList.remove('text-emerald-300');
                    sleepDescLabel.textContent = "Your brain is scanning for danger.";
                }
            });


            // --- 3. Dealbreaker Logic ---
            const form = document.getElementById('sleepForm');
            const resultContent = document.getElementById('resultContent');

            form.addEventListener('change', () => {
                const formData = new FormData(form);
                const sleeperType = formData.get('sleeperType');
                const anxietyLevel = formData.get('anxietyLevel');

                if (!sleeperType || !anxietyLevel) return;

                let title = "";
                let desc = "";
                let icon = "";
                let colorClass = "";

                if (sleeperType === 'light' && anxietyLevel === 'low') {
                    title = "Suggestion: Dog Bed on Floor";
                    desc = "Your sensitivity to movement outweighs the chemical benefits. Keep them close, but off the mattress to avoid micro-awakenings.";
                    icon = "fa-bed";
                    colorClass = "text-amber-400";
                } else if (sleeperType === 'heavy') {
                    title = "Suggestion: Let Them Up!";
                    desc = "You sleep deep enough to ignore the wiggles, so you get all the chemical benefits with none of the disruption.";
                    icon = "fa-check-circle";
                    colorClass = "text-emerald-400";
                } else if (anxietyLevel === 'high') {
                    title = "Suggestion: Co-Sleep (Worth It)";
                    desc = "Even if you wake up occasionally, the cortisol reduction and grounding effect for your anxiety likely outweigh the disruption.";
                    icon = "fa-heart";
                    colorClass = "text-indigo-400";
                } else {
                    // Fallback for light + high anxiety is covered above, this catches edge cases
                    title = "Suggestion: Try it out";
                    desc = "It's a balance. Try a weekend test run.";
                    icon = "fa-question-circle";
                    colorClass = "text-blue-400";
                }

                resultContent.innerHTML = `
                    <div class="animate-pulse-once">
                        <i class="fas ${icon} text-5xl ${colorClass} mb-4 block"></i>
                        <h3 class="text-2xl font-bold text-white mb-2">${title}</h3>
                        <p class="text-slate-300">${desc}</p>
                    </div>
                `;
            });
        });
    </script>

    <!-- Animation utility -->
    <style>
        @keyframes pulse-once {
            0% {
                transform: scale(0.95);
                opacity: 0.5;
            }

            50% {
                transform: scale(1.05);
                opacity: 1;
            }

            100% {
                transform: scale(1);
                opacity: 1;
            }
        }

        .animate-pulse-once {
            animation: pulse-once 0.5s ease-out forwards;
        }
    </style>

    <!-- CONFIRMATION: NO SVG graphics used (FontAwesome used for icons). NO Mermaid JS used. Charts via Chart.js Canvas. -->
    <!-- Visualization & Content Choices: 
     1. Hormone Chart: Bar chart to clearly show inverse relationship (Data visualization goal).
     2. Watchdog: Abstract bar graph to visualize "Vigilance" concept (Conceptual visualization).
     3. Heart Health: Stat blocks for quick scanning (Informational).
     4. Decision Matrix: Logic-based HTML form (Interactive/Personalization).
-->
</body>

</html>
    <script>
        // Populate Year Select
        const yearSelect = document.getElementById('yearInput');
        const currentYear = new Date().getFullYear();
        for (let i = currentYear; i >= currentYear - 25; i--) {
            let option = document.createElement('option');
            option.value = i;
            option.text = i;
            yearSelect.appendChild(option);
        }

        // Calculation Logic
        function calculateLifespan() {
            const boughtYear = parseInt(document.getElementById('yearInput').value);
            const type = document.getElementById('typeInput').value;
            const age = currentYear - boughtYear;

            let maxLifespan = 10; // default for foam
            let typeName = "Mattress";

            if (type === 'hybrid') { maxLifespan = 12; typeName = "Hybrid Mattress"; }
            if (type === 'spring') { maxLifespan = 8; typeName = "Innerspring Mattress"; }
            if (type === 'latex') { maxLifespan = 15; typeName = "Latex Mattress"; }

            const resultDiv = document.getElementById('result');
            const resultTitle = document.getElementById('resultTitle');
            const resultDesc = document.getElementById('resultDesc');

            resultDiv.classList.remove('hidden');
            resultDiv.classList.remove('bg-green-100', 'bg-yellow-100', 'bg-red-100', 'text-green-800', 'text-yellow-800', 'text-red-800');

            if (age < (maxLifespan - 3)) {
                // Good Condition
                resultDiv.classList.add('bg-green-100', 'text-green-800');
                resultTitle.innerHTML = `<i class="fa-solid fa-circle-check mr-2"></i> You're Good to Go!`;
                resultDesc.innerText = `Your ${typeName} is ${age} years old. It should have plenty of life left. Remember to rotate it regularly!`;
            } else if (age >= (maxLifespan - 3) && age <= maxLifespan) {
                // Warning Zone
                resultDiv.classList.add('bg-yellow-100', 'text-yellow-800');
                resultTitle.innerHTML = `<i class="fa-solid fa-triangle-exclamation mr-2"></i> Monitor for Wear`;
                resultDesc.innerText = `Your ${typeName} is ${age} years old. It is approaching the end of its expected lifespan (${maxLifespan} years). Start looking for signs of sagging.`;
            } else {
                // Replace Zone
                resultDiv.classList.add('bg-red-100', 'text-red-800');
                resultTitle.innerHTML = `<i class="fa-solid fa-circle-xmark mr-2"></i> Time to Replace`;
                resultDesc.innerText = `Your ${typeName} is ${age} years old. This exceeds the typical lifespan of ${maxLifespan} years. You are likely compromising your sleep quality and support.`;
            }
        }

        // Mobile Menu Toggle
        document.getElementById('mobile-menu-btn').addEventListener('click', function () {
            const menu = document.getElementById('mobile-menu');
            menu.classList.toggle('hidden');
        });
    </script>
</body>


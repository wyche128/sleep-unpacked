    <!-- JS Logic -->
    <script>
        // --- State Management ---
        const state = {
            currentView: 'overview',
            isMobileMenuOpen: false
        };

        // --- Navigation Logic ---
        function navigateTo(viewId) {
            // Update State
            state.currentView = viewId;

            // Toggle Sidebar Styles
            document.querySelectorAll('.nav-item').forEach(btn => {
                btn.classList.remove('active');
                btn.classList.remove('bg-slate-50');
                btn.classList.remove('text-violet-600');
            });
            const activeBtn = document.getElementById(`nav-${viewId}`);
            if (activeBtn) {
                activeBtn.classList.add('active');
            }

            // Show/Hide Views
            document.querySelectorAll('.view-section').forEach(section => {
                section.classList.add('hidden');
                section.classList.remove('block');
            });
            const activeSection = document.getElementById(`view-${viewId}`);
            if (activeSection) {
                activeSection.classList.remove('hidden');
                activeSection.classList.add('block');
                activeSection.classList.add('fade-in');
            }

            // Close mobile menu if open
            if (state.isMobileMenuOpen) {
                toggleMobileMenu();
            }
        }

        // Mobile Menu Toggle
        const sidebar = document.getElementById('sidebar');
        const mobileBtn = document.getElementById('mobile-menu-btn');

        function toggleMobileMenu() {
            state.isMobileMenuOpen = !state.isMobileMenuOpen;
            if (state.isMobileMenuOpen) {
                sidebar.classList.remove('hidden');
                sidebar.classList.add('flex');
                sidebar.style.position = 'absolute';
                sidebar.style.zIndex = '100';
            } else {
                sidebar.classList.add('hidden');
                sidebar.classList.remove('flex');
                sidebar.style.position = '';
            }
        }

        mobileBtn.addEventListener('click', toggleMobileMenu);

        // --- Charts Implementation (Chart.js) ---
        // Global Chart Defaults
        Chart.defaults.font.family = "'Inter', sans-serif";
        Chart.defaults.color = '#64748b';
        Chart.defaults.scale.grid.color = '#f1f5f9';

        document.addEventListener('DOMContentLoaded', () => {

            // 1. Overview Trend Chart
            const ctxTrend = document.getElementById('mainTrendChart').getContext('2d');
            const mainTrendChart = new Chart(ctxTrend, {
                type: 'line',
                data: {
                    labels: ['1940', '1960', '1980', '2000', '2020', '2025'],
                    datasets: [{
                        label: 'Average Hours of Sleep (US Adults)',
                        data: [7.9, 7.5, 7.1, 6.9, 6.4, 6.3], // Approximated typical trend data
                        borderColor: '#8b5cf6', // Violet 500
                        backgroundColor: 'rgba(139, 92, 246, 0.1)',
                        borderWidth: 3,
                        tension: 0.4,
                        fill: true,
                        pointRadius: 4,
                        pointBackgroundColor: '#ffffff',
                        pointBorderColor: '#8b5cf6',
                        pointBorderWidth: 2
                    }]
                },
                options: {
                    maintainAspectRatio: false,
                    plugins: {
                        legend: { display: false },
                        tooltip: {
                            backgroundColor: '#1e293b',
                            titleColor: '#ffffff',
                            bodyColor: '#cbd5e1',
                            cornerRadius: 8
                        }
                    },
                    scales: {
                        y: {
                            min: 5,
                            max: 9,
                            title: { display: true, text: 'Hours' }
                        }
                    }
                }
            });

            // 2. Age Demographics Chart
            const ctxAge = document.getElementById('ageChart').getContext('2d');
            new Chart(ctxAge, {
                type: 'bar',
                data: {
                    labels: ['Newborn', 'Toddler', 'Preschool', 'School Age', 'Teen', 'Adult', 'Elderly'],
                    datasets: [{
                        label: 'Recommended Sleep (Hours)',
                        data: [15.5, 12.5, 11.5, 10, 9, 7.5, 7], // Averages based on ranges
                        backgroundColor: [
                            '#e0e7ff', '#c7d2fe', '#a5b4fc', '#818cf8', '#6366f1', '#4f46e5', '#4338ca'
                        ],
                        borderRadius: 6
                    }]
                },
                options: {
                    maintainAspectRatio: false,
                    plugins: {
                        legend: { display: false }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            title: { display: true, text: 'Hours / Day' }
                        }
                    }
                }
            });

            // 3. Stress Impact Chart
            const ctxStress = document.getElementById('stressChart').getContext('2d');
            new Chart(ctxStress, {
                type: 'radar',
                data: {
                    labels: ['Sleep Quality', 'Sleep Duration', 'Ease of Falling Asleep', 'Daytime Energy', 'Mood Stability'],
                    datasets: [{
                        label: 'Low Stress',
                        data: [90, 85, 95, 88, 92],
                        borderColor: '#10b981', // Emerald
                        backgroundColor: 'rgba(16, 185, 129, 0.2)',
                    }, {
                        label: 'High Stress',
                        data: [45, 55, 30, 40, 35],
                        borderColor: '#ef4444', // Red
                        backgroundColor: 'rgba(239, 68, 68, 0.2)',
                    }]
                },
                options: {
                    maintainAspectRatio: false,
                    scales: {
                        r: {
                            angleLines: { color: '#f1f5f9' },
                            grid: { color: '#e2e8f0' },
                            pointLabels: { font: { size: 11 } }
                        }
                    }
                }
            });

            // 4. Disorders Doughnut Chart
            const ctxDisorder = document.getElementById('disorderChart').getContext('2d');
            new Chart(ctxDisorder, {
                type: 'doughnut',
                data: {
                    labels: ['Short-term Insomnia', 'Sleep Apnea', 'Chronic Insomnia', 'Restless Leg Syndrome', 'Narcolepsy'],
                    datasets: [{
                        data: [30, 26, 10, 10, 1], // Approximate prevalence %
                        backgroundColor: [
                            '#8b5cf6', // Violet
                            '#06b6d4', // Cyan
                            '#f59e0b', // Amber
                            '#64748b', // Slate
                            '#f43f5e'  // Rose
                        ],
                        borderWidth: 0,
                        hoverOffset: 4
                    }]
                },
                options: {
                    maintainAspectRatio: false,
                    cutout: '70%',
                    plugins: {
                        legend: {
                            position: 'bottom',
                            labels: { usePointStyle: true, boxWidth: 8 }
                        }
                    }
                }
            });

            // Simple Logic for the Overview Dropdown to update chart (Simulated)
            document.getElementById('trendSelector').addEventListener('change', function (e) {
                const val = e.target.value;
                if (val === 'quality') {
                    mainTrendChart.data.datasets[0].data = [80, 75, 70, 65, 55, 50]; // Hypothetical Quality Index
                    mainTrendChart.data.datasets[0].label = 'Self-Reported Quality Index';
                    mainTrendChart.data.datasets[0].borderColor = '#f59e0b';
                    mainTrendChart.data.datasets[0].backgroundColor = 'rgba(245, 158, 11, 0.1)';
                    mainTrendChart.data.datasets[0].pointBorderColor = '#f59e0b';
                    mainTrendChart.options.scales.y.title.text = 'Quality Index (0-100)';
                    mainTrendChart.options.scales.y.max = 100;
                    mainTrendChart.options.scales.y.min = 0;
                } else {
                    mainTrendChart.data.datasets[0].data = [7.9, 7.5, 7.1, 6.9, 6.4, 6.3];
                    mainTrendChart.data.datasets[0].label = 'Average Hours of Sleep (US Adults)';
                    mainTrendChart.data.datasets[0].borderColor = '#8b5cf6';
                    mainTrendChart.data.datasets[0].backgroundColor = 'rgba(139, 92, 246, 0.1)';
                    mainTrendChart.data.datasets[0].pointBorderColor = '#8b5cf6';
                    mainTrendChart.options.scales.y.title.text = 'Hours';
                    mainTrendChart.options.scales.y.max = 9;
                    mainTrendChart.options.scales.y.min = 5;
                }
                mainTrendChart.update();
            });
        });
    </script>
</body>

</html>